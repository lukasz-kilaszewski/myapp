.container
  %p#notice= notice
  %h1 Quotations
  %table.table
    %thead
      %tr
        %th Quote
        %th{:colspan => "3"}
    %tbody
      - @quotations.each do |quotation|
        %tr
          %td= quotation.quote
  %br/
  = link_to 'New Quotation', new_quotation_path, class: 'btn btn-primary'
